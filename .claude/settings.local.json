{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push)",
      "Skill(generate-marketing-copy)",
      "Skill(generate-marketing-copy:*)",
      "Bash(git mv:*)",
      "Bash(npm run build:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/scripts/check-accessibility.sh"
          }
        ]
      }
    ]
  }
}
