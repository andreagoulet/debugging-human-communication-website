---
import { formatMarkdown } from '../utils/formatMarkdown';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="card-simple bg-teal-50">
  <p class="font-bold text-teal-950 mb-2">{title}</p>
  <p class="text-teal-900" set:html={formatMarkdown(description)} />
</div>
