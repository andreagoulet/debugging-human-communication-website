---
import { formatMarkdown } from '../utils/formatMarkdown';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="bg-white rounded-xl p-8 shadow-sm">
  <p class="text-lg font-bold text-teal-950 mb-3">{title}</p>
  <p class="text-teal-900" set:html={formatMarkdown(description)} />
</div>
