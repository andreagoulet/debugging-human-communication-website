---
import { formatMarkdown } from '../utils/formatMarkdown';

interface Props {
  title: string;
  description: string;
  tip: string;
}

const { title, description, tip } = Astro.props;
---

<div class="card-compact bg-white flex flex-col h-full">
  <h3 class="text-xl font-bold text-teal-950 mb-3">{title}</h3>
  <p class="text-teal-900 mb-4 flex-grow" set:html={formatMarkdown(description)} />
  <hr class="border-teal-200 mb-4" />
  <p class="text-teal-700" set:html={formatMarkdown(tip)} />
</div>
