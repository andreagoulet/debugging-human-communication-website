---
interface Props {
  title: string;
  description: string;
  tip: string;
}

const { title, description, tip } = Astro.props;
---

<div class="bg-teal-900/50 rounded-2xl p-6">
  <h3 class="text-xl font-bold text-teal-400 mb-3">{title}</h3>
  <p class="text-teal-100 mb-4">{description}</p>
  <p class="text-teal-200 text-sm">
    <strong class="text-teal-400">Try this:</strong>
    <Fragment set:html={tip} />
  </p>
</div>
