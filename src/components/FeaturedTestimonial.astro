---
import { formatMarkdown } from '../utils/formatMarkdown';

interface Props {
  quote: string;
  author: string;
  role?: string;
}

const { quote, author, role } = Astro.props;
---

<div class="bg-white rounded-xl p-8 md:p-12 shadow-lg max-w-4xl mx-auto">
  <svg class="w-12 h-12 text-teal-300 mb-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
  </svg>

  <blockquote class="text-xl md:text-2xl text-teal-900 leading-relaxed mb-8" set:html={formatMarkdown(quote)} />

  <footer class="flex items-center gap-4">
    <div class="w-1 h-12 bg-teal-600 rounded"></div>
    <div>
      <p class="text-xl font-semibold text-teal-950">{author}</p>
      {role && (
        <p class="text-teal-900">{role}</p>
      )}
    </div>
  </footer>
</div>
