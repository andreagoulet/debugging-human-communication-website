---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import MethodologyCard from '../components/MethodologyCard.astro';
import ChallengeCard from '../components/ChallengeCard.astro';
import PricingCard from '../components/PricingCard.astro';
import FAQItem from '../components/FAQItem.astro';
import ClarificationCard from '../components/ClarificationCard.astro';
import FitList from '../components/FitList.astro';

const calendlyUrl = "https://calendly.com/andreagoulet/discovery-session";

// Get all homepage content, sorted by filename
const allContent = await getCollection('homepage');
const content = Object.fromEntries(
  allContent.map(entry => [entry.slug, entry])
);

// Extract each section's data (all from frontmatter now)
const hero = content['01-hero'].data;
const openingNarrative = content['02-opening-narrative'].data;
const realProblem = content['03-the-real-problem'].data;
const answer = content['04-the-answer'].data;
const methodology = content['05-methodology'].data;
const findYourLever = content['06-find-your-lever'].data;
const pricing = content['07-pricing'].data;
const faq = content['08-faq'].data;
const whatThisIsNot = content['09-what-this-is-not'].data;
const whoThisIsFor = content['10-who-this-is-for'].data;
const finalCta = content['11-final-cta'].data;
const footer = content['12-footer'].data;

// Helper to render paragraph with optional emphasis
const renderParagraph = (p: string | { text: string; emphasis?: 'bold' | 'italic' }) => {
  if (typeof p === 'string') return p;
  return p;
};
---

<Layout title="Debugging Human Communication | Communication Coaching for Engineers">
  <!-- Header -->
  <header class="bg-teal-50 py-4 px-6 sticky top-0 z-50 border-b border-teal-200">
    <nav class="max-w-6xl mx-auto flex justify-between items-center">
      <a href="/" class="flex items-center gap-3">
        <img src="/logo.svg" alt="Debugging Human Communication" class="h-10 w-auto" />
        <span class="font-bold text-teal-950 text-lg hidden sm:block">Debugging Human Communication</span>
      </a>
      <a
        href={calendlyUrl}
        class="bg-coral text-white font-semibold px-5 py-2.5 rounded-lg hover:bg-coral/90 transition-colors"
      >
        Book a Session
      </a>
    </nav>
  </header>

  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-b from-teal-200 to-teal-50 py-20 px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-teal-950 mb-6">
          {hero.headline}
        </h1>
        <p class="text-xl md:text-2xl text-teal-900 mb-10 max-w-2xl mx-auto">
          {hero.subheadline}
        </p>
        <a
          href={calendlyUrl}
          class="inline-block bg-coral text-white font-bold text-lg px-8 py-4 rounded-lg hover:bg-coral/90 transition-colors shadow-lg hover:shadow-xl"
        >
          {hero.ctaText}
        </a>
      </div>
    </section>

    <!-- Opening Narrative -->
    <section class="py-20 px-6 bg-white">
      <div class="max-w-3xl mx-auto">
        <p class="text-xl text-teal-950 mb-6 font-medium">{openingNarrative.opener}</p>

        {openingNarrative.paragraphs?.map((p) => (
          <p class="text-lg text-teal-900 mb-6">{typeof p === 'string' ? p : p.text}</p>
        ))}

        <p class="text-lg text-teal-950 font-medium mb-6">{openingNarrative.painPointsIntro}</p>

        <ul class="space-y-4 text-lg text-teal-900 mb-8">
          {openingNarrative.painPoints?.map((point) => (
            <li class="flex items-start gap-3">
              <span class="text-teal-600 mt-1">•</span>
              <span>{point}</span>
            </li>
          ))}
        </ul>

        {openingNarrative.closingParagraphs?.map((p, i) => {
          const isLast = i === (openingNarrative.closingParagraphs?.length ?? 0) - 1;
          const isSecondToLast = i === (openingNarrative.closingParagraphs?.length ?? 0) - 2;
          return isSecondToLast ? (
            <p class="text-xl text-teal-950 font-semibold">{p}</p>
          ) : isLast ? (
            <p class="text-xl text-teal-800 font-bold mt-4">{p}</p>
          ) : (
            <p class="text-lg text-teal-900 mb-6">{p}</p>
          );
        })}
      </div>
    </section>

    <!-- The Real Problem -->
    <section class="py-20 px-6 bg-teal-200">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-teal-950 mb-8">{realProblem.title}</h2>

        {realProblem.paragraphs?.map((p) => {
          const para = typeof p === 'string' ? { text: p } : p;
          return para.emphasis === 'bold' ? (
            <p class="text-xl text-teal-950 font-semibold mb-6">{para.text}</p>
          ) : para.emphasis === 'italic' ? (
            <p class="text-xl text-teal-950 font-medium italic">{para.text}</p>
          ) : (
            <p class="text-lg text-teal-900 mb-6">{para.text}</p>
          );
        })}
      </div>
    </section>

    <!-- The Answer -->
    <section class="py-20 px-6 bg-white">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-teal-950 mb-8">{answer.title}</h2>

        {answer.paragraphs?.map((p) => {
          const para = typeof p === 'string' ? { text: p } : p;
          return para.emphasis === 'bold' ? (
            <p class="text-2xl text-teal-800 font-bold mb-8">{para.text}</p>
          ) : (
            <p class="text-lg text-teal-900 mb-6">{para.text}</p>
          );
        })}
      </div>
    </section>

    <!-- What Makes This Different (Methodology) -->
    <section class="py-20 px-6 bg-teal-50">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-teal-950 mb-4 text-center">{methodology.title}</h2>
        <p class="text-xl text-teal-800 text-center mb-16">{methodology.subtitle}</p>

        <div class="space-y-16">
          {methodology.approaches?.map((approach, index) => (
            <MethodologyCard
              number={index + 1}
              title={approach.title}
              paragraphs={approach.paragraphs}
              testimonial={approach.testimonial}
            />
          ))}
        </div>

        <div class="text-center mt-12">
          <a
            href={calendlyUrl}
            class="inline-block bg-coral text-white font-bold text-lg px-8 py-4 rounded-lg hover:bg-coral/90 transition-colors shadow-lg hover:shadow-xl"
          >
            Book Your Discovery Session →
          </a>
        </div>
      </div>
    </section>

    <!-- Find Your Lever -->
    <section class="py-20 px-6 bg-teal-950 text-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-center">{findYourLever.title}</h2>

        {findYourLever.epigraph && (
          <blockquote class="text-xl text-teal-200 text-center mb-8 italic">
            "{findYourLever.epigraph.quote}"
            <footer class="mt-2 text-teal-400 not-italic">— {findYourLever.epigraph.author}</footer>
          </blockquote>
        )}

        <div class="text-lg text-teal-100 mb-12 text-center max-w-2xl mx-auto space-y-6">
          {findYourLever.introParagraphs?.map((p) => (
            <p set:html={p.replace(/\*([^*]+)\*/g, '<em>$1</em>')} />
          ))}
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {findYourLever.challenges?.map((challenge) => (
            <ChallengeCard
              title={challenge.title}
              description={challenge.description}
              tip={challenge.tip}
            />
          ))}
        </div>

        <div class="text-center mt-12">
          <p class="text-xl text-teal-200 mb-6">{findYourLever.closingText}</p>
          <a
            href={calendlyUrl}
            class="inline-block bg-coral text-white font-bold text-lg px-8 py-4 rounded-lg hover:bg-coral/90 transition-colors shadow-lg hover:shadow-xl"
          >
            Book Your Discovery Session →
          </a>
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section class="py-20 px-6 bg-white">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-teal-950 mb-4 text-center">{pricing.title}</h2>

        {pricing.tiers?.filter(tier => tier.featured).map((tier) => (
          <PricingCard
            title={tier.title}
            price={tier.price}
            description={tier.description}
            featured={true}
            guarantee={tier.guarantee}
            ctaText={tier.ctaText}
            ctaUrl={calendlyUrl}
          />
        ))}

        <h3 class="text-2xl font-bold text-teal-950 mb-8 text-center">{pricing.continuationTitle}</h3>

        <div class="grid md:grid-cols-2 gap-8">
          {pricing.tiers?.filter(tier => !tier.featured).map((tier) => (
            <PricingCard
              title={tier.title}
              price={tier.price}
              period={tier.period}
              description={tier.description}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-20 px-6 bg-teal-50">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-teal-950 mb-12 text-center">{faq.title}</h2>

        <div class="space-y-8">
          {faq.questions?.map((item) => (
            <FAQItem question={item.question} answer={item.answer} />
          ))}
        </div>
      </div>
    </section>

    <!-- What This Is NOT -->
    <section class="py-20 px-6 bg-white">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-teal-950 mb-8 text-center">{whatThisIsNot.title}</h2>
        <p class="text-lg text-teal-800 text-center mb-12">{whatThisIsNot.subtitle}</p>

        <div class="grid sm:grid-cols-2 gap-6">
          {whatThisIsNot.items?.map((item) => (
            <ClarificationCard title={item.title} description={item.description} />
          ))}
        </div>
      </div>
    </section>

    <!-- Who This Is For -->
    <section class="py-20 px-6 bg-teal-200">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-teal-950 mb-12 text-center">{whoThisIsFor.title}</h2>

        <div class="grid md:grid-cols-2 gap-8">
          <FitList type="good" items={whoThisIsFor.goodFit || []} />
          <FitList type="bad" items={whoThisIsFor.notGoodFit || []} />
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="py-20 px-6 bg-teal-950 text-white">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-8">{finalCta.title}</h2>

        {finalCta.paragraphs?.map((p) => {
          const para = typeof p === 'string' ? { text: p } : p;
          return para.emphasis === 'bold' ? (
            <p class="text-2xl text-white font-bold mb-8">{para.text}</p>
          ) : (
            <p class="text-lg text-teal-100 mb-6">{para.text}</p>
          );
        })}

        <a
          href={calendlyUrl}
          class="inline-block bg-coral text-white font-bold text-xl px-10 py-5 rounded-lg hover:bg-coral/90 transition-colors shadow-lg hover:shadow-xl mb-6"
        >
          {finalCta.ctaText}
        </a>

        <p class="text-teal-200">{finalCta.ctaSubtext}</p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 px-6 bg-teal-950 border-t border-teal-900">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-teal-400 mb-4">
          Questions before booking? Email <a href={`mailto:${footer.contactEmail}`} class="text-teal-200 hover:text-white underline">{footer.contactEmail}</a>
        </p>
        <p class="text-teal-600 text-sm">
          {footer.copyright}
        </p>
      </div>
    </footer>
  </main>
</Layout>
