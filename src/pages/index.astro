---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import MethodologyCard from '../components/MethodologyCard.astro';
import ChallengeCard from '../components/ChallengeCard.astro';
import PricingCard from '../components/PricingCard.astro';
import FAQItem from '../components/FAQItem.astro';
import ClarificationCard from '../components/ClarificationCard.astro';
import FitList from '../components/FitList.astro';
import FeaturedTestimonial from '../components/FeaturedTestimonial.astro';
import { formatMarkdown } from '../utils/formatMarkdown';

const calendlyUrl = "https://calendly.com/andreagoulet/discovery-session";

// Get all homepage content, sorted by filename
const allContent = await getCollection('homepage');
const content = Object.fromEntries(
  allContent.map(entry => [entry.slug, entry])
);

// Extract each section's data (all from frontmatter now)
const hero = content['01-hero'].data;
const openingNarrative = content['02-narrative'].data;
const realProblem = content['03-problem'].data;
const answer = content['04-solution'].data;
const methodology = content['05-methodology'].data;
const meetAndrea = content['06-bio'].data;
const framework = content['07-framework'].data;
const featuredTestimonial = content['08-testimonial'].data;
const findYourLever = content['09-challenges'].data;
const pricing = content['10-pricing'].data;
const faq = content['11-faq'].data;
const whatThisIsNot = content['12-clarifications'].data;
const whoThisIsFor = content['13-fit'].data;
const finalCta = content['14-cta'].data;
const footer = content['15-footer'].data;

// Helper to render paragraph with optional emphasis
const renderParagraph = (p: string | { text: string; emphasis?: 'bold' | 'italic' }) => {
  if (typeof p === 'string') return p;
  return p;
};
---

<Layout title="Debugging Human Communication | Communication Coaching for Engineers">
  <!-- Header -->
  <header class="bg-teal-50 py-4 px-6 sticky top-0 z-50 border-b border-teal-200">
    <nav class="container-lg flex justify-between items-center">
      <a href="/" class="flex items-center gap-3">
        <img src="/logo.svg" alt="Debugging Human Communication" class="h-10 w-auto" />
        <span class="font-bold text-teal-950 text-lg hidden sm:block">Debugging Human Communication</span>
      </a>
      <a href={calendlyUrl} class="btn-primary-sm">
        Book a Session
      </a>
    </nav>
  </header>

  <main>
    <!-- Hero Section -->
    <section class="section bg-gradient-to-b from-teal-200 to-teal-50">
      <div class="container-md text-center">
        <h1 class="heading-hero mb-6" set:html={formatMarkdown(hero.headline || '')} />
        <p class="text-xl md:text-2xl text-teal-900 mb-10 container-xs" set:html={formatMarkdown(hero.subheadline || '')} />
        <a href={calendlyUrl} class="btn-primary">
          {hero.ctaText}
        </a>
      </div>
    </section>

    <!-- Opening Narrative -->
    <section class="section bg-white">
      <div class="container-sm">
        <p class="text-xl text-teal-950 mb-6 font-medium text-center" set:html={formatMarkdown(openingNarrative.opener || '')} />

        {openingNarrative.paragraphs?.map((p) => (
          <p class="text-lg text-teal-900 mb-6" set:html={formatMarkdown(typeof p === 'string' ? p : p.text)} />
        ))}

        <p class="text-lg text-teal-950 font-medium mb-6" set:html={formatMarkdown(openingNarrative.painPointsIntro || '')} />

        <ul class="space-y-4 text-lg text-teal-900 mb-8">
          {openingNarrative.painPoints?.map((point) => (
            <li class="flex items-start gap-3">
              <span class="text-teal-950 mt-1">•</span>
              <span set:html={formatMarkdown(point)} />
            </li>
          ))}
        </ul>

        {openingNarrative.closingParagraphs?.map((p, i) => {
          const isLast = i === (openingNarrative.closingParagraphs?.length ?? 0) - 1;
          const isSecondToLast = i === (openingNarrative.closingParagraphs?.length ?? 0) - 2;
          return isSecondToLast ? (
            <p class="text-xl text-teal-950 font-semibold" set:html={formatMarkdown(p)} />
          ) : isLast ? (
            <p class="text-xl text-teal-950 font-bold mt-4" set:html={formatMarkdown(p)} />
          ) : (
            <p class="text-lg text-teal-900 mb-6" set:html={formatMarkdown(p)} />
          );
        })}
      </div>
    </section>

    <!-- The Real Problem -->
    <section class="section bg-teal-200">
      <div class="container-sm">
        <h2 class="heading-section mb-8 text-center" set:html={formatMarkdown(realProblem.title || '')} />

        {realProblem.paragraphs?.map((p) => {
          const para = typeof p === 'string' ? { text: p } : p;
          return para.emphasis === 'bold' ? (
            <p class="text-xl text-teal-950 font-semibold mb-6" set:html={formatMarkdown(para.text)} />
          ) : para.emphasis === 'italic' ? (
            <p class="text-xl text-teal-950 font-medium italic" set:html={formatMarkdown(para.text)} />
          ) : (
            <p class="text-lg text-teal-900 mb-6" set:html={formatMarkdown(para.text)} />
          );
        })}
      </div>
    </section>

    <!-- The Answer -->
    <section class="section bg-white">
      <div class="container-sm">
        <h2 class="heading-section mb-8 text-center" set:html={formatMarkdown(answer.title || '')} />

        {answer.paragraphs?.map((p) => {
          const para = typeof p === 'string' ? { text: p } : p;
          return para.emphasis === 'bold' ? (
            <p class="text-2xl text-teal-950 font-bold mb-8" set:html={formatMarkdown(para.text)} />
          ) : (
            <p class="text-lg text-teal-900 mb-6" set:html={formatMarkdown(para.text)} />
          );
        })}
      </div>
    </section>

    <!-- What Makes This Different (Methodology) -->
    <section class="section bg-teal-50">
      <div class="container-md">
        <h2 class="heading-section mb-4 text-center" set:html={formatMarkdown(methodology.title || '')} />
        <p class="text-xl text-teal-900 text-center mb-16" set:html={formatMarkdown(methodology.subtitle || '')} />

        <div class="space-y-16">
          {methodology.approaches?.map((approach, index) => (
            <MethodologyCard
              number={index + 1}
              title={approach.title}
              paragraphs={approach.paragraphs}
              testimonial={approach.testimonial}
            />
          ))}
        </div>

        <div class="text-center mt-12">
          <a href={calendlyUrl} class="btn-primary">
            Book Your Discovery Session →
          </a>
        </div>
      </div>
    </section>

    <!-- Meet Andrea -->
    <section class="section bg-white">
      <div class="container-sm">
        <h2 class="heading-section mb-6 text-center" set:html={formatMarkdown(meetAndrea.title || '')} />
        <p class="text-xl text-teal-900 text-center mb-10" set:html={formatMarkdown(meetAndrea.intro || '')} />

        {meetAndrea.paragraphs?.map((p) => (
          <p class="text-lg text-teal-900 mb-6" set:html={formatMarkdown(typeof p === 'string' ? p : p.text)} />
        ))}
      </div>
    </section>

    <!-- Featured Testimonial -->
    <section class="section bg-teal-100">
      <div class="container-md">
        <h2 class="heading-section mb-12 text-center" set:html={formatMarkdown(featuredTestimonial.title || '')} />

        {featuredTestimonial.testimonial && (
          <FeaturedTestimonial
            quote={featuredTestimonial.testimonial.quote}
            author={featuredTestimonial.testimonial.author}
            role={featuredTestimonial.testimonial.role}
          />
        )}
      </div>
    </section>

    <!-- Framework -->
    <section class="section bg-teal-200">
      <div class="container-md">
        <h2 class="heading-section mb-4 text-center" set:html={formatMarkdown(framework.title || '')} />
        <p class="text-xl text-teal-900 text-center mb-6" set:html={formatMarkdown(framework.subtitle || '')} />
        <p class="text-lg text-teal-900 text-center mb-12 container-sm" set:html={formatMarkdown(framework.introText || '')} />

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {framework.steps?.map((step) => (
            <div class="bg-white rounded-lg p-6 shadow-sm">
              <div class="text-3xl font-bold text-teal-950 mb-2">{step.number}</div>
              <h3 class="text-lg font-semibold text-teal-950 mb-3" set:html={formatMarkdown(step.title)} />
              <p class="text-teal-900 text-sm" set:html={formatMarkdown(step.description)} />
            </div>
          ))}
        </div>

        <p class="text-lg text-teal-950 font-medium text-center mt-12" set:html={formatMarkdown(framework.closingText || '')} />
      </div>
    </section>

    <!-- Find Your Lever -->
    <section class="section bg-teal-950 text-white">
      <div class="container-md">
        <h2 class="heading-section !text-white mb-8 text-center" set:html={formatMarkdown(findYourLever.title || '')} />

        {findYourLever.epigraph && (
          <blockquote class="border-l-4 border-teal-400 pl-6 py-4 mb-10 bg-teal-900/30 rounded-r-lg">
            <p class="text-2xl text-teal-100 italic mb-2" set:html={`"${formatMarkdown(findYourLever.epigraph.quote)}"`} />
            <footer class="text-teal-400" set:html={`— ${formatMarkdown(findYourLever.epigraph.author)}`} />
          </blockquote>
        )}

        <div class="text-lg text-teal-100 mb-12 space-y-4">
          {findYourLever.introParagraphs?.map((p) => (
            <p set:html={formatMarkdown(p)} />
          ))}
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          {findYourLever.challenges?.map((challenge) => (
            <ChallengeCard
              title={challenge.title}
              description={challenge.description}
              tip={challenge.tip}
            />
          ))}
        </div>

        <div class="text-center mt-12">
          <p class="text-xl text-teal-200 mb-6" set:html={formatMarkdown(findYourLever.closingText || '')} />
          <a href={calendlyUrl} class="btn-primary">
            Book Your Discovery Session →
          </a>
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section class="section bg-white">
      <div class="container-md">
        <h2 class="heading-section mb-4 text-center" set:html={formatMarkdown(pricing.title || '')} />
        {pricing.subtitle && (
          <p class="text-xl text-teal-900 text-center mb-12 container-sm mx-auto" set:html={formatMarkdown(pricing.subtitle)} />
        )}

        {pricing.tiers?.filter(tier => tier.featured).map((tier) => (
          <PricingCard
            title={tier.title}
            price={tier.price}
            description={tier.description}
            featured={true}
            guarantee={tier.guarantee}
            ctaText={tier.ctaText}
            ctaUrl={calendlyUrl}
          />
        ))}

        <h3 class="heading-card mb-8 text-center" set:html={formatMarkdown(pricing.continuationTitle || '')} />

        <div class="grid md:grid-cols-2 gap-8">
          {pricing.tiers?.filter(tier => !tier.featured).map((tier) => (
            <PricingCard
              title={tier.title}
              price={tier.price}
              period={tier.period}
              description={tier.description}
            />
          ))}
        </div>

        {pricing.teamCallout && (
          <div class="mt-12 pt-10 border-t border-teal-200">
            <div class="text-center max-w-lg mx-auto">
              <p class="text-lg font-semibold text-teal-950 mb-2">{pricing.teamCallout.text}</p>
              <p class="text-teal-900 mb-4">{pricing.teamCallout.description}</p>
              <a href={`mailto:${footer.contactEmail}`} class="text-teal-600 hover:text-teal-800 underline font-medium">
                {pricing.teamCallout.linkText} →
              </a>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- FAQ -->
    <section class="section bg-teal-50">
      <div class="container-sm">
        <h2 class="heading-section mb-12 text-center" set:html={formatMarkdown(faq.title || '')} />

        <div class="space-y-8">
          {faq.questions?.map((item) => (
            <FAQItem question={item.question} answer={item.answer} />
          ))}
        </div>
      </div>
    </section>

    <!-- What This Is NOT -->
    <section class="section bg-white">
      <div class="container-sm">
        <h2 class="heading-section mb-8 text-center" set:html={formatMarkdown(whatThisIsNot.title || '')} />
        <p class="text-lg text-teal-900 text-center mb-12" set:html={formatMarkdown(whatThisIsNot.subtitle || '')} />

        <div class="grid sm:grid-cols-2 gap-6">
          {whatThisIsNot.items?.map((item) => (
            <ClarificationCard title={item.title} description={item.description} />
          ))}
        </div>
      </div>
    </section>

    <!-- Who This Is For -->
    <section class="section bg-teal-200">
      <div class="container-sm">
        <h2 class="heading-section mb-12 text-center" set:html={formatMarkdown(whoThisIsFor.title || '')} />

        <div class="grid md:grid-cols-2 gap-8">
          <FitList type="good" items={whoThisIsFor.goodFit || []} />
          <FitList type="bad" items={whoThisIsFor.notGoodFit || []} />
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="section bg-teal-950 text-white">
      <div class="container-sm">
        <h2 class="heading-section !text-white mb-10 text-center" set:html={formatMarkdown(finalCta.title || '')} />

        <div class="bg-white rounded-xl p-8 md:p-10 shadow-lg">
          {finalCta.intro && (
            <p class="text-xl text-teal-900 mb-6" set:html={formatMarkdown(finalCta.intro)} />
          )}

          {finalCta.paragraphs?.map((p) => {
            const para = typeof p === 'string' ? { text: p } : p;
            return para.emphasis === 'bold' ? (
              <p class="text-2xl text-teal-950 font-bold mb-6" set:html={formatMarkdown(para.text)} />
            ) : (
              <p class="text-lg text-teal-900 mb-6" set:html={formatMarkdown(para.text)} />
            );
          })}

          {finalCta.closing && (
            <p class="text-xl text-teal-950 font-medium mb-8" set:html={formatMarkdown(finalCta.closing)} />
          )}

          <div class="text-center">
            <a href={calendlyUrl} class="btn-primary-lg">
              {finalCta.ctaText}
            </a>
          </div>
        </div>

        <p class="text-teal-200 text-sm text-center mt-6" set:html={formatMarkdown(finalCta.ctaSubtext || '')} />
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 px-6 bg-teal-950 border-t border-teal-900">
      <div class="container-md text-center">
        <p class="text-teal-400 mb-4">
          Questions before booking? Email <a href={`mailto:${footer.contactEmail}`} class="text-teal-200 hover:text-white underline">{footer.contactEmail}</a>
        </p>
        <p class="text-teal-400 text-sm mb-2">
          {footer.copyright}
        </p>
        <p class="text-teal-500 text-sm">
          <a href={footer.termsUrl} class="hover:text-teal-300 underline">Terms & Conditions</a>
          <span class="mx-2">|</span>
          <a href={footer.privacyUrl} class="hover:text-teal-300 underline">Privacy Policy</a>
        </p>
      </div>
    </footer>
  </main>
</Layout>
